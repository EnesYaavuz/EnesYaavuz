package denklemkökübulma;
import java.util.Scanner;
public class DenklemKöküBulma {

    public static void main(String[] args) {
        Scanner klayve = new Scanner(System.in);
        System.out.println("A sayısını giriniz:");
        double a = klayve.nextDouble();
        System.out.println("B sayısını giriniz:");
        double b = klayve.nextDouble();
        System.out.println("C sayısını giriniz:");
        double c = klayve.nextDouble();
        double d;
        d=b*b-4*a*c ;
        if(d<0){
           System.out.println("Reel kök yoktur.");
        }
        else if(d==0){
            d=(-b/2*a);
            System.out.println("X="+d);
        } 
        else {
            double X1,X2;
            X1=(-b+Math.sqrt(d))/(2*a);
            X2=(-b-Math.sqrt(d))/(2*a);
            System.out.println("X1="+X1);
            System.out.println("X2="+X2);
        }
    }
}
